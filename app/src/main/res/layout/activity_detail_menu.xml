<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewAirMineral"
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/amidis"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/textViewNamaAirMineral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageViewAirMineral"
            android:layout_gravity="center"
            android:layout_marginStart="23dp"
            android:layout_marginTop="13dp"
            android:fontFamily="casual"
            android:text="Merek Air Mineral"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="116dp" />

        <TextView
            android:id="@+id/deskripsiAirMineral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewNamaAirMineral"
            android:layout_below="@+id/textViewNamaAirMineral"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="casual"
            android:text="Deskripsi Air Mineral"
            app:layout_constraintTop_toBottomOf="@+id/TVMenuMakanan"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/TVHargaMakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNamaAirMineral"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/textViewNamaAirMineral"
            android:text="test"
            android:textStyle="bold"
            android:visibility="gone"
            tools:layout_editor_absoluteX="297dp"
            tools:layout_editor_absoluteY="141dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/deskripsiAirMineral"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:background="@color/cardview_dark_background"
            app:srcCompat="@drawable/batere20" />


    </RelativeLayout>

</ScrollView>