<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewAirMineral"
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/amidis"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/textViewNamaAirMineral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageViewAirMineral"
            android:layout_gravity="center"
            android:layout_marginStart="23dp"
            android:layout_marginTop="13dp"
            android:fontFamily="casual"
            android:text="Merek Air Mineral"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="116dp" />

        <TextView
            android:id="@+id/deskripsiAirMineral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewNamaAirMineral"
            android:layout_below="@+id/textViewNamaAirMineral"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="casual"
            android:text="Deskripsi Air Mineral"
            app:layout_constraintTop_toBottomOf="@+id/TVMenuMakanan"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/TVHargaMakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNamaAirMineral"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/textViewNamaAirMineral"
            android:text="test"
            android:textStyle="bold"
            android:visibility="gone"
            tools:layout_editor_absoluteX="297dp"
            tools:layout_editor_absoluteY="141dp" />

        <ImageView
            android:id="@+id/gallon"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@+id/deskripsiAirMineral"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:layout_gravity="center_horizontal"/>
            
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/gallon"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:id="@+id/button_minus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="kosonginGalon"
                android:src="@drawable/ic_remove"
                android:tint="?attr/colorError" />

            <TextView
                android:id="@+id/Liter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:fontFamily="casual"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/button_plus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="isiGalon"
                android:src="@drawable/ic_plus"
                android:tint="@android:color/holo_blue_bright" />
            
        </LinearLayout>
    </RelativeLayout>

</ScrollView>